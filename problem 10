#include <iostream>
using namespace std;
int factorial(int n) {
    int fact = 1;
    for (int i = 1, i <= n, i++) 
    {
        fact *= i;
    }
    return fact;
}
int main() {
    int num, temp, sum = 0;
    cout << "Enter a number: ";
    cin >> num;
    temp = num;
    while (temp > 0) {
        int digit = temp % 10;
        sum += factorial(digit);
        temp /= 10;
    }
    if (sum == num) {
        cout << num << " is a Krishnamurthy number." << endl;
    } else {
        cout << num << " is NOT a Krishnamurthy number." << endl;
    }
    return 0;
}
