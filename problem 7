#include <iostream>
#include <string>
using namespace std;
int main() {
    string password, input;
    // Set correct password
    password = "1234";   
    while (true) {
        cout << "Enter password: ";
        cin >> input;
        if (input == password) {
            cout << "Logged In" << endl;
            break;  
        } else {
            cout << "Incorrect Password. Try again" << endl;
        }
    }
    return 0;
}
