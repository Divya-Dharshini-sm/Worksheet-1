#include <iostream>
using namespace std;
int main() {
    long long n;
    cout << "Enter a positive integer: ";
    cin >> n;
    int steps = 0;
    while (n >= 10) {  
        long long sum = 0;
        while (n > 0) {
            sum += n % 10;
            n /= 10;
        }
        n = sum;
        steps++;
    }
    cout << "Digital Root = " << n << endl;
    cout << "Steps required = " << steps << endl;
    return 0;
}
