#include <iostream>
using namespace std;
int main() {
    double km, miles, feet;
    const double km_to_mile = 0.621371;
    const double km_to_feet = 3280.84;
    cout << "Enter the distance between two cities (in km): ";
    cin >> km;
    miles = km * km_to_mile;
    feet = km * km_to_feet;
    cout << "The distance between the two cities is "
         << km << " km or "
         << miles << " miles or "
         << feet << " foot." << endl;
    return 0;
}
